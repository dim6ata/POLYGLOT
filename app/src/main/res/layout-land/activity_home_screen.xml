<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context=".HomeScreen">

    <!--  big radius-->
    <RelativeLayout

        android:id="@+id/largeRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:padding="20dp">


        <!--    Translate button -->
        <RelativeLayout
            android:id="@+id/translate_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/btn_translate"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/round_button_style"
                android:fontFamily="@font/yeseva_one"
                android:onClick="translateOnClick"
                android:text="@string/translate"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <!--    Display phrases button-->

        <RelativeLayout
            android:id="@+id/display_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:layout_marginStart="90dp"
            android:layout_toEndOf="@id/centreBig">


            <Button
                android:id="@+id/btn_display"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/round_button_style"
                android:fontFamily="@font/yeseva_one"
                android:onClick="displayOnClick"
                android:padding="5dp"
                android:text="@string/display_phrases"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

        </RelativeLayout>


        <!--    Polyglot Text View -->

        <RelativeLayout
            android:id="@+id/tv_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yeseva_one"
                android:text="@string/polyglot"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="40sp"
                android:textStyle="bold">


            </TextView>

        </RelativeLayout>


        <!-- polyglot main image  -->
        <RelativeLayout
            android:id="@+id/centreBig"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/imv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/polyglot_logo"
                app:srcCompat="@drawable/polyglot_logo_bl_small_two"
                tools:visibility="visible" />

        </RelativeLayout>


        <!-- edit button -->
        <RelativeLayout
            android:id="@+id/edit_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/centreBig">

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/round_button_style"
                android:fontFamily="@font/yeseva_one"
                android:onClick="editOnClick"
                android:padding="5dp"
                android:text="@string/edit_phrases"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />


        </RelativeLayout>


        <!-- Subscribed languages button  -->
        <RelativeLayout
            android:id="@+id/language_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="60dp"
            android:layout_toEndOf="@id/centreBig">


            <Button
                android:id="@+id/btn_language"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/round_button_style"
                android:fontFamily="@font/yeseva_one"
                android:onClick="languageOnClick"
                android:text="@string/language_subscription"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <!--  Add phrases button  -->
        <RelativeLayout
            android:id="@+id/add_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="90dp"
            android:layout_toStartOf="@id/centreBig">

            <Button
                android:id="@+id/btn_add"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/round_button_style"
                android:fontFamily="@font/yeseva_one"
                android:onClick="addOnClick"
                android:padding="5dp"
                android:text="@string/add_phrases"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />


        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>


