<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.polyglot">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_polyglot"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_polyglot_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.polyglot.ViewAllTranslatedItems"
            android:configChanges="orientation"></activity>
        <activity android:name="com.example.polyglot.HomeScreen" />
        <activity
            android:name="com.example.polyglot.Translate"
            android:configChanges="orientation"></activity>
        <activity android:name="com.example.polyglot.LanguageSubscription" />
        <activity android:name="com.example.polyglot.EditPhrases" />
        <activity android:name="com.example.polyglot.DisplayPhrases" />
        <activity android:name="com.example.polyglot.AddPhrases" />
        <activity
            android:name="com.example.polyglot.MainActivity"
            android:configChanges="orientation">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>